@model IEnumerable<School_Management_System_Application.Models.Enrollment>

@{
    ViewData["Title"] = "StudentCourses";
}

<h1>@ViewBag.student's courses:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.seminalUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.projectUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.examPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.seminalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.projectPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.additionalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.finishDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grade)
            </td>
            <td>
                @if(@item.seminalUrl != null)
                {    
                        <a href="~/seminals/@item.seminalUrl">Open seminal file</a>
                    }
                    else
                    {
                        <span>No file uploaded</span>
                    }
            </td>
            <td>
                 @if(@item.projectUrl != null)
                {    
                        <a href="@item.projectUrl">Open project link</a>
                    }
                    else
                    {
                        <span>No link uploaded</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.examPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seminalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.projectPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.additionalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.finishDate)
            </td>
            <td>
                <a asp-action="EditAsStudent" asp-route-id="@item.enrollmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.enrollmentId">Details</a> 
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                 {
                     @Html.Raw("|");
                    <a asp-action="Delete" asp-route-id="@item.enrollmentId">Delete</a>
                 }
            </td>
        </tr>
}
    </tbody>
</table>
<a href="javascript:void(0);" onclick="history.go(-1);">Go back</a>